				view="categories" img="class:tests-cat" alt="Tests/Categories">com_tests_categories</menu>
			<menu link="option=com_tests" img="class:tests"
				alt="Tests">com_tests</menu>
			<menu link="option=com_tests&amp;view=sessions" img="class:tests-sessions"
				alt="Tests/Sessions">com_tests_sessions</menu>
		</submenu>

		<files folder="admin">
			<filename>access.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>tests.php</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>libraries</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_tests.ini</language>
		</languages>
