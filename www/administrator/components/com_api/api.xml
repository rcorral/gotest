<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.7" method="upgrade">
	<name>com_api</name>
	<creationDate>September 2011</creationDate>
	<author>Brian Edgerton</author>
	<copyright>2011 Edge Web Works, LLC</copyright>
	<authorEmail>brian@edgewebworks.com</authorEmail>
	<authorUrl>edgewebworks.com</authorUrl>
	<version>0.1</version>
	<description>COM_API_XML_DESCRIPTION</description>

	<scriptfile>scriptphp</scriptfile>

	<install>
        <sql>
            <file charset="utf8" driver="mysql">install.mysql.sql</file>
        </sql>
    </install>

	<files folder="site">
        <file>api.php</file>
        <file>LICENSE.php</file>
        <file>router.php</file>
        <file>index.html</file>
		<folder>assets</folder>
        <folder>controllers</folder>
		<folder>libraries</folder>
        <folder>models</folder>
		<folder>tables</folder>
        <folder>views</folder>
    </files>

    <languages folder="site">
        <language tag="en-GB">language/en-GB/en-GB.com_api.ini</language>
    </languages>

	<administration>
		<menu>COM_API_MENU</menu>

		<files folder="admin">
			<filename>api.php</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<filename>LICENSE.php</filename>
			<filename>install.mysql.sql</filename>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>views</folder>
    	</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_api.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_api.sys.ini</language>
		</languages>
	</administration>
</extension>
